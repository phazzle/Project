@model Web.Models.OrderHeader

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>OrderHeader</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderType.Name)
        </dd>

    </dl>
</div>
<div>

<form asp-controller="OrderHeaders" asp-action="Details"  asp-route-id="@Model.OrderHeaderId" method="get">
    <p>
        Title: <input type="text" name="searchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                LineNumber
            </th>
            <th>
               ProductCode
            </th>
            <th>
                CostPrice
            </th>
            <th>
                SalesPrice
            </th>
            <th>
                Quantity
            </th>
   
            <th>
                ProductType
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in  Model.OrderLines) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LineNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProductTypeId)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="OrderLines" asp-route-id="@item.OrderLineId">Edit</a> |
                <a asp-action="Details" asp-controller="OrderLines" asp-route-id="@item.OrderLineId">Details</a> |
                <a asp-action="Delete" asp-controller="OrderLines" asp-route-id="@item.OrderLineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

   
    <a asp-action="Create" asp-controller="OrderLines" asp-route-id="@Model?.OrderHeaderId">Create</a> |
    <a asp-action="Edit" asp-route-id="@Model?.OrderHeaderId">Edit</a> |
    <a asp-action="Index">Back to List</a> |
</div>
